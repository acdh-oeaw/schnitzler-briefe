      <body>
         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1895_AS_RBH_3_00003.jpeg"/>Herrn <hi rend="latintype">Dr Rich.
                     Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <placeName key="pmb766">Egelmoos 22</placeName>.</hi>
