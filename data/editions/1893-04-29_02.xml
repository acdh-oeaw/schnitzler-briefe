            <div type="address">
                <address>
                    <addrLine>
                        <pb facs="1893_AS_RBH_1_00005"/>
                        <hi rend="latintype">Herrn Dr. Rich Beer-Hofmann</hi>
                    </addrLine>
                    <addrLine>
                        <rs ref="#pmb50" type="place">Wien</rs>.</addrLine>
