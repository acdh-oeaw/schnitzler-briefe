            <div type="address">
                <address>
                    <addrLine>
                        <pb facs="1897_AS_RBH_2_00050.jpeg"/>Herrn <hi rend="latintype">Dr. Richard Beer-Hofmann </hi>
                    </addrLine>
                    <addrLine>
                        <hi rend="latintype">
                            <rs ref="#pmb213" type="place">Ischl</rs>
                        </hi>
                    </addrLine>
                    <addrLine>
