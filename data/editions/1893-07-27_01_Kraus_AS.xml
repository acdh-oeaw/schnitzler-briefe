            <div type="address">
                <address>
                    <addrLine>
                        <pb facs="MS-SCHNITZLER-B-00055-000-00011"/>Herrn Doktor Arthur
                        Schnitzler,</addrLine>
                    <addrLine>Schriftſteller</addrLine>
                    <addrLine>
                        <placeName key="pmb412">I. Grillparzerstr. 7</placeName>
                    </addrLine>
                    <addrLine>
