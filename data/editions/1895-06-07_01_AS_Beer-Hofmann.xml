      <body>
         <div type="address">
            <address>
               <addrLine>Herrn n. a. Lieutenant</addrLine>
               <addrLine>
                  <pb facs="1895_AS_RBH_1_00011.jpeg"/>
                  <hi rend="latintype">Dr. Richard Beer-Hofmann</hi>
               </addrLine>
               <addrLine>im k. k. Landw.-Inf-Regiment</addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <placeName key="pmb767">Caslau</placeName> Nr 12</hi>.</addrLine>
               <addrLine>
                  <hi rend="latintype">
                            <placeName key="pmb628">Böhmen</placeName>
                        </hi>
               </addrLine>
            </address>
