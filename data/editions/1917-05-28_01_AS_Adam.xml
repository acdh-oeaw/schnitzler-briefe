        <body>
            <div type="address">
                <address>
                    <addrLine>
                  <pb facs=""/>Hrn Dr. Robert Adam Pollak</addrLine>
                    <addrLine>
                  <placeName key="pmb62">Wien XII</placeName>.</addrLine>
