                <address>
                    <addrLine>
                  <pb facs=""/>Herrn Dr. Robert Adam Pollak</addrLine>
                    <addrLine>Bezirksrichter in <placeName key="pmb1240">Zistersdorf</placeName>.</addrLine>
                    <addrLine>
                  <placeName key="pmb1003">N. Oe.</placeName>
               </addrLine>
