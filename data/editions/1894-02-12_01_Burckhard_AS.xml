            <div type="writingSession" n="1">
                <opener>
                    <p>
                        <seg rend="left">
                            <pb facs="MS-SCHNITZLER-B-00020-000-00017.jpg"/>
                            <hi rend="pre-print">
                                <placeName key="pmb14">k. k. Hofburgtheater</placeName>
