        <body>
            <div type="writingSession" n="1">
                <opener>
                    <p rend="right">
                        <pb facs="gray00210.pdf"/>
                        <hi rend="pre-print">
                            <placeName key="pmb38129">
                                <hi rend="small_caps">München</hi>
                            </placeName>
