                </address>
                <address>
                    <addrLine>
                        <pb facs="1905_AS_RBH_1_00024"/>
                        <hi rend="latintype">Herrn Dr Rich Beer-Hofma<c rendition="#gemination-n"/>
                        </hi>
                    </addrLine>
                    <addrLine>
                        <rs ref="#173" type="place">Rodaun</rs>
                    </addrLine>
                    <addrLine>
                        <rs type="place" ref="#40101">
                            <hi rend="latintype">Liesingerstr 2</hi>
