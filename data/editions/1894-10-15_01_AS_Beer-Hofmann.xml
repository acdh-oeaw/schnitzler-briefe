                  <pb facs="1894_AS_RBH_3_00023"/>
                  <hi rend="latintype">Dr. Arthur Schnitzler</hi>, <placeName key="pmb397">Wien, IX.
                     Frankgaſſe 1.</placeName>
               </addrLine>
            </address>
            <address>
               <addrLine><pb facs="1894_AS_RBH_3_00022"/>Herrn <hi rend="latintype">Dr. Richard Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <placeName key="pmb595">Neapel</placeName>
                  </hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">(<placeName key="pmb595">Napoli</placeName>)</hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <hi rend="latintype">a poste ferma</hi>
                  </hi>
               </addrLine>
               <addrLine>
                 
                  <hi rend="latintype">
                     <placeName key="pmb40306">
                        <country>Italien</country>
                     </placeName>
                  </hi>
               </addrLine>
            </address>
