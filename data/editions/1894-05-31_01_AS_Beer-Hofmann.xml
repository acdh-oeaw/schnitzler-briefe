      <body>
         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1894_AS_RBH_1_00004.jpeg"/>Herrn <hi rend="latintype">Dr. Richard
                     Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
                     <placeName key="pmb213">Ischl</placeName>
