      <body> 
         <div type="address"> 
            <address> 
               <addrLine>
                  <pb facs="HS_AM23385Ba"/>Herrn <hi rend="latintype">Hermann Bahr,</hi>
               </addrLine> 
               <addrLine>
                  <hi rend="latintype">
                     
                        <placeName key="pmb165">Wien Ob St Veit</placeName>
                     
                  </hi>
               </addrLine>
               <addrLine>
