            <div type="writingSession" n="1">
                <opener>
                    <p rend="center">
                  <pb facs="TMW HS_Schn4_27_1_1"/>
                  <hi rend="pre-print">
                     <orgName key="pmb34931">Deutsche Rundschau</orgName>
