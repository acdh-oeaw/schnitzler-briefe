   <text type="letter">
      <body>
         <div type="address">
            <address>
               <addrLine>
                  <pb facs="1896_AS_RBH_1_00033.jpeg"/>
                  <hi rend="latintype">Dr. Arthur
                     Schnitzler, <placeName key="pmb168">Berlin</placeName>, <placeName key="pmb41234">Westminster Hotel</placeName>
                  </hi>.</addrLine>
            </address>
            <address>
               <addrLine>
                  <pb facs="1896_AS_RBH_1_00032.jpeg"/>Herrn <hi rend="latintype">Dr. Richard
                     Beer-Hofmann</hi>
               </addrLine>
               <addrLine>
                  <placeName key="pmb50">Wien</placeName>
               </addrLine>
               <addrLine>
                  <hi rend="latintype">
