                        <hi rend="latintype">
                            <rs type="place" ref="#150">XVIII. Sternwartestrasse <subst>
                                    <del rend="overwritten">5</del>
                                    <add place="inline">7</add>
                                </subst>1</rs>.</hi>
                    </addrLine>
