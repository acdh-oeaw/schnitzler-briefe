                    <addrLine>
                        <pb facs=""/>Hrn Ob. Landesgerichts Rath</addrLine>
                    <addrLine>Dr. Robert Adam Pollak,</addrLine>
                    <addrLine>Vicepraesident des <orgName key="pmb29591">Handelsgerichts</orgName>
                    </addrLine>
                    <addrLine>
                        <placeName key="pmb62">Wien</placeName>
